<?php

/**
 * @file
 * Primary hooks for the SDGE RTP Pricing module.
 */

/**
 * Implements hook_theme().
 *
 * Defines the themeable unit (Twig template) for the pricing page.
 */
function sdge_rtp_pricing_theme($existing, $type, $theme, $path) {
  return [
    'sdge_rtp_pricing_page' => [
      'variables' => ['header_data' => NULL, 'data' => NULL],
      'template' => 'sdge-rtp-pricing-page',
    ],
    // Register the standard Drupal table theme for the CRUD view.
    'sdge_rtp_data_table' => [
      'variables' => ['header' => [], 'rows' => []],
      'render element' => 'table',
    ],
  ];
}

/**
 * Implements hook_page_attachments().
 *
 * Attaches the Bootstrap 5.2 library globally.
 */
function sdge_rtp_pricing_page_attachments(array &$attachments) {
  $attachments['#attached']['library'][] = 'sdge_rtp_pricing/bootstrap-styles';
}