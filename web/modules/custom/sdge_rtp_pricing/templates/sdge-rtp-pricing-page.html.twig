<div class="container my-5">
  {# --- Site Header Replication (Gayang Gaya Natin Sya) --- #}
  <header class="mb-4 text-center">
    <div class="row align-items-center">
        <div class="col-12">
            <h1>San Diego Gas & Electric Company</h1>
            <p class="lead">Real-Time Pricing (RTP) Data</p>
        </div>
    </div>
  </header>

  {# --- Data Table --- #}
  <div class="card shadow">
    <div class="card-header bg-primary text-white">
      <h5 class="mb-0">Hourly Pricing Data</h5>
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover table-sm mb-0">
          <thead class="table-light">
            <tr>
              {% for header, title in header_data %}
                <th>{{ title }}</th>
              {% endfor %}
            </tr>
          </thead>
          <tbody>
            {% for item in data %}
            <tr>
              <td>{{ item.record_date }}</td>
              <td>{{ item.record_time }}</td>
              <td>{{ item.caiso_dep | number_format(5) }}</td>
              <td>{{ item.gcc_adder }}</td>
              <td>{{ item.small | number_format(6) }}</td>
              <td>{{ item.medium | number_format(6) }}</td>
              <td>{{ item.large | number_format(6) }}</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <footer class="mt-4 text-muted text-center">
    <p><small>Note: This data is for demonstration and is sourced from the internal Drupal database table.</small></p>
  </footer>
</div>